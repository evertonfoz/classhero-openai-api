{
  "name": "classhero-backend",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "backend",
  "workspaceFolder": "/workspace",
  "overrideCommand": false,
  "runServices": ["backend", "frontend"],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "updateContentCommand": "true",
  "postCreateCommand": "cd backend && npm install --unsafe-perm && npm install --save-dev nodemon --unsafe-perm && npm install @supabase/supabase-js",
  "postStartCommand": "cd backend && npx nodemon src/index.js",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
